@model SPNR_Web.Models.DataBase.MediaLink

<div class="container mt-4">
    <div class="row">
        <div class="col-md-7 mx-auto">
            <div class="col-md-8">
                <h3 class="text-center mt-3 mb-4" style="color: #4a4a4a">Медиа</h3>
                <hr />

                <form asp-action="Media">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Name" class="control-label">Название</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Url" class="control-label">Url</label>
                        <input asp-for="Url" class="form-control" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="CreationTime" class="form-control" type="hidden" />
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Создать" class="btn btn-primary" />
                        @{
                            if (Model.Id != Guid.Empty)
                            {
                                <a asp-controller="Constructor" asp-action="MediaDelete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                            }
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
