@model IEnumerable<SPNR_Web.Models.DataBase.User>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2 style="color: #4a4a4a">Список юзеров</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Register" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Добавить</a>
        </div>
    </div>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Login)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Login)</td>
                    <td>
                        @if (item.Login != "root_user")
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Удалить</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
