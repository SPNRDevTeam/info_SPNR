@model IEnumerable<SPNR_Web.Models.DataBase.User>

<p>
    <a asp-action="Register" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @if (item.Login != "root_user")
                {
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>